<%init>
  my $tag;
    my $commit;
    my $updated;

    system("git -C . rev-parse 2>/dev/null");
    my $isGit = `echo $?`;
    if($isGit == 0) {
        $tag = `git describe --abbrev=0 --tags`;
        $commit = `git rev-parse --short HEAD`;
        $updated = `git log -1 --format=%cd`;
    } else {
        $tag = eval{ $c->get_conf('version') };
        $updated = eval{ $c->get_conf('version_updated') };
    }
</%init>

