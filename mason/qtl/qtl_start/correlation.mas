<%doc>

=head1 NAME 
qtl/qtl_form/stat_form.mas - a mason component for a QTL stat parameters 
submission

=AUTHOR
Isaak Y Tecle (iyt2@cornell.edu)

=cut

</%doc>

<%args>
$pop
$heatmap_file
$corre_table_file
$trait_acronym_pairs
</%args>

<%perl>

my $name   = $pop->get_name();
my $corre_image = qq | <img src="$heatmap_file"  alt="correlation output for $name"/> |;

</%perl>

% if (!$heatmap_file) 
%{
  <&| /page/info_section.mas, 
      collapsible =>1, 
      collapsed   =>1, 
      title       => "Pearson Correlation Analysis" &> 
         <p>There is no correlation output for this population.</p>
  </&>
%}
% else
%{
  <&| /page/info_section.mas, 
      collapsible =>1, 
      collapsed   =>1, 
      title       => "Pearson Correlation Analysis" &> 
  <% $corre_image %> 

  <&| /page/optional_show.mas, 
      title => "Acronyms key"
  &>
  <& /page/columnar_table.mas,
     headings     => ["Trait name", "Acronym"],
     data         => $trait_acronym_pairs,
     __alt_freq   => 2,
     __alt_width  => 1,
     __alt_offset => 3,
     __align      => 'l'
  &>
  </&>
  </&>
%}



