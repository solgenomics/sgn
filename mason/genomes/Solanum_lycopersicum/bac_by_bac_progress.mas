    my $total = $complete[$_] || 0;

    [ $total, sprintf('<a href="%s">%s</a>', $link, $total ) ]
  } @chr_nums;

my @num_uploaded = ( undef, map $progress_data->{$_}{available}, @chr_nums );
print summed_row_html Available =>
