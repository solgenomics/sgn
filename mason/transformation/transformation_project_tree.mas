<%args>
$user_id => undef
@programs => ()
@locations => ()
@roles => ()
</%args>

<& /util/import_javascript.mas, classes => [ 'jquery.iframe-post-form', 'jstree.dist.jstree', 'CXGN.TrialTreeFolders'] &>

<& /util/import_css.mas, paths => ['/static/documents/inc/jstree_theme/jstree-bstheme-min.css'] &>

<& /transformation/add_transformation_project_dialog.mas, user_id=>$user_id, programs=>\@programs, locations=>\@locations, roles=>\@roles &>
<& /breeders_toolbox/folder/folder_set.mas, project_type=>'transformation_project' &>
<& /breeders_toolbox/folder/folder_new.mas, project_type=>'transformation_project' &>
<& /breeders_toolbox/folder/folder_move.mas, project_type=>'transformation_project' &>
<& /breeders_toolbox/folder/folders_edit.mas, folder_tree_type => 'Transformation', folder_tree_identifier => 'transformation_projects_list', folder_tree_refresh_name => 'refresh_transformation_project_jstree_html' &>
<& /transformation/add_autogenerated_name_metadata_dialog.mas, programs=>\@programs, user_id=>$user_id &>
<& /transformation/download_obsolete_metadata_using_list_dialog.mas &>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Information</th>
            <th>Breeding Programs -- Folders -- Transformation Projects&nbsp;&nbsp;&nbsp;&nbsp;<button class="btn btn-sm btn-default" id="refresh_transformation_project_jstree_html_trialtree_button" name="refresh_transformation_project_jstree_html">Refresh</button></th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                <h4>Search</h4>
                <input type="text" class="form-control input-sm" id="transformation_tree_search" placeholder="Search" />
                <hr>

                <h5><i>Double click<br />transformation project (&nbsp;<span class="glyphicon glyphicon-text-width text-success"></span>&nbsp;) or folder (&nbsp;<span class="glyphicon glyphicon-folder-open text-danger"></span>&nbsp;)<br/>to view detail page.</i></h5>
                <h5><i>Breeding programs (&nbsp;<span class="glyphicon glyphicon-briefcase text-info"></span>&nbsp;)</i></h5>
                <hr>
                <h4>Folders</h4>
                <button class="btn btn-sm btn-default" id="new_folder_dialog_link">Create new folder</button><br/><br/>
                <button class="btn btn-sm btn-default" id="open_folder_dialog_link">Move transformation project(s) to folder</button><br/><br/>
                <button class="btn btn-sm btn-default" id="move_folder_dialog_link">Move folder</button>
                <div id="folder_edit_options" style="display:none">
                    <hr>
                    <h5><i>Select multiple folders by holding 'Ctrl'.</i></h5>
                    <button class="btn btn-primary" id="edit_folders_button" title="First Select Folder(s) to Edit">Edit Folder(s)</button>
                    <br/>
                </div>

                <!--<button id="delete" disabled="disabled" >Delete</button -->
                <br />
            </td>
            <td>
                <div id="transformation_projects_list" >[loading...]</div>
            </td>
        </tr>
    </tbody>
</table>


<script>

jQuery.noConflict();

jQuery(document).ready(function($) {

    jQuery('#create_transformation_project_link').click(function() {
        var lo = new CXGN.List();
        get_select_box('years', 'transformation_project_year', {'id':'transformation_project_year_select', 'name':'transformation_project_year_select', 'auto_generate':1});
        jQuery("#create_transformation_project_dialog").modal("show");
    });

    jQuery.ajax( {
        url: '/ajax/breeders/get_trials_with_folders_cached?type=transformation',
        success: function(response) {
            var html = '<ul>'+response.html+'</ul>';

            jQuery('#transformation_projects_list').html(html);
            jQuery('#transformation_projects_list').jstree( {
                "core": { 'themes': { 'name': 'proton', 'responsive': true}},
                "valid_children" : [ "folder", "trial", "breeding_program" ],
                "types" : {
                    "breeding_program" : {
                        "icon": 'glyphicon glyphicon-briefcase text-info',
                    },
                    "folder" : {
                        "icon": 'glyphicon glyphicon-folder-open text-danger',
                    },
                    "transformation" : {
                        "icon": 'glyphicon glyphicon-text-width text-success',
                    }
                },
                "search" : {
                    "case_insensitive" : true,
                 },
                "plugins" : ["html_data","types","search"],
            });
        },
        error: function(response) {
            alert("An error occurred while loading the transformation project data.");
          }
    });

    jQuery("#transformation_tree_search").keyup(function() {
        var v = jQuery("#transformation_tree_search").val();
        jQuery("#transformation_projects_list").jstree(true).search(v);
    });

    jQuery('#transformation_projects_list').on("changed.jstree", function (e, data) {
        if ($('#transformation_projects_list').jstree('is_leaf', data.node) && data.node.data.jstree.type == 'folder') {
            jQuery("#folder_edit_options").show();
        }
        else {
            jQuery("#folder_edit_options").hide();
        }
    });

    jQuery("#transformation_projects_list").delegate("li", "dblclick", function(event){
        var node = $("#transformation_projects_list").jstree("get_node", this);
        //console.log(node);
        if (node.id.substr(0,1) !== 'j') {
            if (node.type == 'folder') {
                window.open('/folder/'+node.id);
                event.stopPropagation();
            } else if (node.type == 'transformation') {
                window.open('/breeders_toolbox/trial/'+node.id);
                event.stopPropagation();
            }
        }
    });

});

</script>
