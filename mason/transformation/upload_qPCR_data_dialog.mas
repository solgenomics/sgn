<%args>
$stock_id
$stock_uniquename
</%args>

<div class="modal fade" id="upload_qPCR_data_dialog" name="upload_qPCR_data_dialog" tabindex="-1" role="dialog" aria-labelledby="uploadqPCRDataDialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="uploadqPCRDataDialog">Upload qPCR Data</h4>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <form class="form-horizontal" role="form" method="post" enctype="multipart/form-data" encoding="multipart/form-data" id="upload_qPCR_data_form" name="upload_qPCR_data_form">
                        <div class="form-group">
                            <label class="col-sm-4 control-label">Tissue Type: </label>
                            <div class="col-sm-8" >
                                <div id="qPCR_tissue_type_div"></div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-4 control-label">Endogenous Control: </label>
                            <div class="col-sm-8" >
                                <div id="qPCR_endogenous_control_div"></div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-4 control-label" >Assay Date: </label>
                            <div class="col-sm-8">
                                <input class="form-control" type="text" id="assay_date" name="assay_date" placeholder="YYYY-MM-DD"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-4 control-label">Notes:</label>
                            <div class="col-sm-8">
                                <textarea class="form-control" id="qPCR_notes" name="qPCR_notes" ></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-4 control-label">Data Type: </label>
                            <div class="col-sm-8">
                                <select class="form-control" id="qPCR_data_type_options">
                                    <option value="">Please select a data type</option>
                                    <option value="CT_values">CT values</option>
                                    <option value="normalized_values">normalized values</option>
                                </select>
                            </div>
                        </div>
                        <div id="normalized_values_section" style="display:none">
                            <center>
                                <&| /page/explanation.mas, title=>'Template Information' &>
                                    <p>
                                        <b>File format information</b>
                                        <br>
                                        <a id="normalized_values_upload_spreadsheet_format_info">Spreadsheet Format</a>
                                    </p>
                                </&>
                            </center>
                            <div class="form-group">
                                <label class="col-sm-4 control-label">Upload File (normalized): </label>
                                <div class="col-sm-8" >
                                    <input type="file" name="normalized_qPCR_data_file" id="normalized_qPCR_data_file" encoding="multipart/form-data" />
                                    <input name="qPCR_data_vector_id" id="qPCR_data_vector_id" type="hidden" value="<% $stock_id %>">
                                    <input name="qPCR_data_vector_name" id="qPCR_data_vector_name" type="hidden" value="<% $stock_uniquename %>">
                                </div>
                            </div>
                        </div>
                        <div id="CT_values_section" style="display:none">
                            <center>
                                <&| /page/explanation.mas, title=>'Template Information' &>
                                    <p>
                                        <b>File format information</b>
                                        <br>
                                        <a id="CT_values_upload_spreadsheet_format_info">Spreadsheet Format</a>
                                    </p>
                                </&>
                            </center>
                            <div class="form-group">
                                <label class="col-sm-4 control-label">Upload File (CT): </label>
                                <div class="col-sm-8" >
                                    <input type="file" name="CT_qPCR_file" id="CT_qPCR_file" encoding="multipart/form-data" />
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" name="upload_qPCR_data_submit" id="upload_qPCR_data_submit">Upload</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="qPCR_data_saved_dialog_message" name="qPCR_data_saved_dialog_message" tabindex="-1" role="dialog" aria-labelledby="qPCRDataSavedDialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="qPCRDataSavedDialog">Success</h4>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <p>
                        <span class="ui-icon ui-icon-circle-check" style="float: left; margin: 0 7px 50px 0;"></span>
                        The qPCR data were saved successfully.
                    </p>
                </div>
            </div>
            <div class="modal-footer">
                <button id="dismiss_qPCR_data_saved_dialog" type="button" class="btn btn-default" data-dismiss="modal">Close & Reload</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="upload_qPCR_data_error_display" name="upload_qPCR_data_error_display" tabindex="-1" role="dialog" aria-labelledby="uploadqPCRDataErrorDialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="uploadqPCRDataErrorDialog">Upload Relative Expression Data Error</h4>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <table>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="CT_qPCR_data_upload_spreadsheet_info_dialog" name="CT_qPCR_data_upload_spreadsheet_info_dialog" tabindex="-1" role="dialog" aria-labelledby="uploadCTqPCRDataInfoDialog">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header" style="text-align: center">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="uploadCTqPCRDataInfoDialog">Upload Template Information For qPCR Data (CT values)</h4>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <b>Header:</b>
                    <br>
                    The first row (header) should contain the following:
                    <br />

                    <table class="table table-hover table-bordered table-condensed" >
                        <thead></thead>
                        <tbody>
                            <tr>
                                <td>accession_name</td>
                                <td>Gene A</td>
                                <td>Gene B</td>
                            </tr>
                        </tbody>
                    </table>

                    <b>Required fields:</b>
                    <ul>
                        <li>accession_name (must exist in the database)</li>
                        <li></li>
                    </ul>

                    <b>Optional fields:</b>
                    <ul>
                        <li></li>
                        <li></li>
                    </ul>
                </div>
                <& /help/file_upload_type.mas, type => "qPCR Data", optional_column => 1 &>
            </div>
            <div class="modal-footer">
                <button id="close_relative_expression_data_info_upload_dialog" type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


<script>

jQuery(document).ready(function(){

    jQuery('#upload_qPCR_data_link').click(function() {
        get_select_box('tissue_types', 'qPCR_tissue_type_div', { 'name' : 'qPCR_tissue_type', 'id' : 'qPCR_tissue_type' , 'empty' : 1});
        get_select_box('endogenous_controls', 'qPCR_endogenous_control_div', { 'name' : 'qPCR_endogenous_control', 'id' : 'qPCR_endogenous_control' , 'empty' : 1});
        jQuery("#upload_qPCR_data_dialog").modal("show");
    });

    jQuery('#qPCR_data_type_options').change(function() {
        const data_type = jQuery('#qPCR_data_type_options').val();
        if (data_type == 'CT_values') {
            jQuery("#CT_values_section").modal("show");
            jQuery("#normalized_values_section").modal("hide");
        } else if (data_type == 'normalized_values') {
            jQuery("#normalized_values_section").modal("show");
            jQuery("#CT_values_section").modal("hide");
        } else {
            jQuery("#normalized_values_section").modal("hide");
            jQuery("#CT_values_section").modal("hide");
        }
    });

    jQuery('#upload_CT_qPCT_data_spreadsheet_format_info').click(function(){
        jQuery("#CT_qPCR_data_upload_spreadsheet_info_dialog").modal("show");
    });

    jQuery("#upload_qPCR_data_submit").click(function(){
        const CT_upload_file = jQuery("#CT_qPCR_data_file").val();
        const normalized_upload_file = jQuery("#normalized_qPCR_data_file").val();

        const tissue_type = jQuery("#qPCR_tissue_type").val();
        const endogenous_control = jQuery("#qPCR_endogenous_control").val();
        const assay_date = jQuery("#assay_date").val();
        const qPCR_data_type = jQuery("#qPCR_data_type").val();

        jQuery('#upload_relative_expression_data_form').attr("action", "/ajax/transformation/upload_relative_expression_data");
        if (tissue_type === ''){
            alert("Please select a tissue type");
            return;
        }

        if (endogenous_control === ''){
            alert("Please select an endogenous control");
            return;
        }

        if (assay_date === ''){
            alert("Please provide assay date");
            return;
        }

        if (qPCR_data_type === ''){
            alert("Please select a data type");
            return;
        }

        if (upload_file === ''){
            alert("Please select a file");
            return;
        }

        if ((CT_upload_file === '') && (normalized_upload_file === '')){
            alert("Please select a file");
            return;
        }

        if (CT_upload_file && normalized_upload_file){
            alert("Please select either a CT qPCR or normalized qPCR data file, not both");
            return;
        }

        jQuery("#upload_qPCR_data_form").submit();
        jQuery("#upload_qPCR_data_dialog").modal("hide");
    });

    jQuery('#upload_qPCR_data_form').iframePostForm({
        json: true,
        post: function(){
            jQuery("#working_modal").modal("show");
        },
        complete: function(response) {
            jQuery("#working_modal").modal("hide");
            if (response.error_string) {
                jQuery("#upload_qPCR_data_error_display tbody").html('');
                jQuery("#upload_qPCR_data_error_display tbody").append(response.error_string);
                jQuery("#upload_qPCR_data_error_display").modal("show");
                return;
            }
            if (response.error) {
                alert(response.error);
                return;
            }
            if (response.success) {
                jQuery('#qPCR_data_saved_dialog_message').modal("show");
            }
        }
    });

    jQuery("#dismiss_qPCR_data_saved_dialog").click(function(){
        location.reload();
    });

    jQuery('#normalized_qPCR_data_upload_spreadsheet_format_info').click(function() {
        jQuery("#normalized_qPCR_data_upload_spreadsheet_info_dialog").modal("show");
    });


});

</script>
