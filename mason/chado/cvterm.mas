     <th>Type</th>
    <th>Stock name</th>
    <th>Description</th>
  </tr>
</thead>

</table>

<script>

  jQuery(document).ready(function () {
  
    jQuery('#phen_stocks_data').DataTable( { 
      'ajax': '/cvterm/'+ <% $cvterm_id %> + '/datatables/phenotyped_stocks',
     });
  });

