    <th>Organism</th>
    <th>Locus symbol</th>
    <th>Locus name</th>
  </tr>
</thead>

</table>

<script>

  jQuery(document).ready(function () {
  
    jQuery('#loci_data').DataTable( { 
      'ajax': '/cvterm/'+ <% $cvterm_id %> + '/datatables/annotated_loci',
     });
  });

</script>


</&>



<&| /page/info_section.mas,
       title=> "Annotated stocks",
       collapsible => 1,
       collapsed=>1,
       subtitle => '',
