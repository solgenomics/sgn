                <h4 class="modal-title" id="addMarkerDosageDialog">Add Marker Alleles to List</h4>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-sm-1">
                        </div>
                        <div class="col-sm-12 well">
                            <div class="row">
                                <div class="col-sm-11">
                                    <div class="form-horizontal">
                                        <div class="form-group">
                                            <label class="control-label col-sm-4">List Name:</label>
                                            <div class="col-sm-8">
                                                <div class="input-group">
                                                    <select class="form-control" id="selected_marker_set1">
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div id = "markerset_download_section" style="display:none">
                                            <div class="form-group">
                                                <label class="control-label col-sm-4">Marker Name(s):</label>
                                                <div class="col-sm-8">
                                                    <textarea class="form-control" id="marker_name_download" placeholder="To add more than one marker, separate marker names using a new line."></textarea>
                                                </div>
                                            </div>
                                        </div>
                                        <div id = "markerset_dosage_section" style="display:none">
                                            <div class="form-group">
                                                <label class="control-label col-sm-4">Marker Name:</label>
                                                <div class="col-sm-8">
                                                    <div class="input-group">
                                                        <input type="text" class="form-control marker_name" id="marker_name_dosage" placeholder="Enter marker name">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label col-sm-4">Allele Dosage:</label>
                                                <div class="col-sm-8" >
                                                    <div class="input-group">
                                                        <select class="form-control" id="allele_dosage">
                                                            <option value="">Select Allele Dosage</option>
                                                            <option value="0">0</option>
                                                            <option value="1">1</option>
                                                            <option value="2">2</option>
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div id = "markerset_snp_section" style="display:none">
                                            <div class="form-group">
                                                <label class="control-label col-sm-4">Marker Name:</label>
                                                <div class="col-sm-8">
                                                    <div class="input-group">
                                                        <input type="text" class="form-control marker_name" id="marker_name_snp" placeholder="Enter marker name">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label col-sm-4">Specify Alleles:</label>
                                                <div class="col-sm-4" >
                                                    <div class="input-group">
                                                        <select class="form-control" id="allele_1" disabled>
                                                            <option value="">Enter marker name first</option>
                                                        </select>
                                                        <select class="form-control" id="allele_2" disabled>
                                                            <option value="">Enter marker name first</option>
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="add-marker-success" role="alert" style="display: none"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal" id="close_add_marker">Close</button>
                <button type="button" class="btn btn-primary" name="add_marker" id="add_marker">Add Marker Allele</button>
            </div>
        </div>
    </div>
</div>
