<%doc>

=head1 NAME

/breeders_toolbox/markers/manage_markers.mas - a mason component to display markerset info, add new markersets and add filtering parameters in markersets

=head1 AUTHOR

Titima Tantikanjana <tt15@cornell.edu>

=cut

</%doc>

<& /util/import_javascript.mas, classes => [ 'jquery', 'jquery.dataTables','CXGN.BreedersToolbox.MarkerSet', "CXGN.List" ] &>

<& /page/page_title.mas, title=>'Manage Marker Alleles' &>

<& /page/detail_page_2_col_section.mas, info_section_collapsed => 0, info_section_title => "<h4 style='display:inline'>Your Marker Alleles</h4>", info_section_subtitle => 'View your marker allele info', buttons_html => '<button class="btn btn-sm btn-primary" style="margin:3px" id="add_new_markerset_button">Create new List of Marker Alleles</button><button class="btn btn-sm btn-primary" style="margin:3px" id="add_marker_dosage_button">Add Marker Alleles to existing List</button><button class="btn btn-default" style="margin:3px" data-toggle="modal" data-target="#markerset_usage_modal">Usage Help <span class="glyphicon glyphicon-question-sign"></span></button>', icon_class => "glyphicon glyphicon-list-alt", info_section_id => "marker_set_summary_section" &>

<& /page/detail_page_3_col_section.mas, icon_class => "glyphicon glyphicon-search", title => "Use marker alleles to search for accessions with specific genotype.", button_id => "accession_search_link" &>


<div class="modal fade" id="add_markerset_dialog" name="add_markerset_dialog" tabindex="-1" role="dialog" aria-labelledby="addMarkerSetDialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="addMarkerSetDialog">Create New Marker Allele List</h4>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-sm-1">
                        </div>
                        <div class="col-sm-12 well">
                            <div class="row">
                                <div class="col-sm-11">
                                    <div class="form-horizontal">
                                        <div class="form-group">
                                            <label class="control-label col-sm-4">List Name:</label>
                                                <div class="col-sm-8" >
                                                    <div class="input-group">
                                                        <input type="text" class="form-control" id="new_marker_set" placeholder="Enter list name">
                                                    </div>
                                                </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-sm-4">Genotyping protocol:</label>
                                                <div class="col-sm-8">
                                                    <div class="input-group">
                                                        <select class="form-control" id="selected_protocol">
                                                        </select>
                                                    </div>
                                                </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-sm-4">Data type:</label>
                                                <div class="col-sm-8">
                                                    <div class="input-group">
                                                        <select class="form-control" id="genotyping_data_type">
                                                        <option value="">Select genotyping data type</option>
                                                        <option value="SNP">SNP</option>
                                                        <option value="Dosage">Dosage</option>
                                                        <!-- option value="Download">Download</option-->
                                                        </select>
                                                    </div>
                                                </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-sm-4">Description:</label>
                                                <div class="col-sm-8" >
                                                    <div class="input-group">
                                                        <input type="text" class="form-control" id="marker_set_desc" placeholder="Enter description">
                                                    </div>
                                                </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" name="save_marker_set" id="save_marker_set">Create List</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="add_marker_dosage_dialog" name="add_marker_dosage_dialog" tabindex="-1" role="dialog" aria-labelledby="addMarkerDosageDialog">
