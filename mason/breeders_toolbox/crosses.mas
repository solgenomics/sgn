      	      <div class="col-sm-10">
	        <select class="form-control" id="cross_upload_location" name="cross_upload_location">
      		<%perl>
		  foreach my $location (@locations) {
		    print "<option value=".'"'.@$location[1].'"'.">".@$location[1]."</option>";
		  }
