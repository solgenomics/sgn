<div class="modal fade" id="upload_plants_with_num_plants_spreadsheet_info_dialog" name="upload_plants_with_num_plants_spreadsheet_info_dialog" tabindex="-1" role="dialog" aria-labelledby="uploadPlantsWithNumPlantsInfoDialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header" style="text-align: center">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="uploadPlantsWithNumPlantsInfoDialog">Upload Template Information</h4>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <b>This is for recording individual plants in a plot. The plant name will be saved as a concatenation of plot_name + _ + plant_index_number for as many plants as specfied by num_plants_per_plot</b>
                    <br/>
                    <b>May be uploaded in an Excel file (.xls)</b>
                    <br />
                    (.xlsx format not supported)
                    <br /><br />
                    <b>Header:</b>
                    <br>
                    The first row (header) should contain the following:
                    <br />

                    <table class="table table-hover table-bordered table-condensed" >
                        <thead></thead>
                        <tbody>
                            <tr>
                                <td>plot_name</td>
                                <td>num_plants_per_plot</td>
                            </tr>
                        </tbody>
                    </table>

                    <b>Required fields:</b>
                    <br/>
                    plot_name (must exist in the database already)
                    <br />
                    num_plants_per_plot (must be a number. the number of plants in the plot. the saved plant name will be a concatenation of plot_name + plant_number, such as MyTrial_plot101_plant1)
                </div>
            </div>
            <div class="modal-footer">
                <button id="close_upload_plants_with_number_plants_info_dialog" type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


<script>

jQuery(document).ready(function() {

    jQuery('#create_plant_entries_button').click( function () {
        jQuery('#add_plants_dialog').modal("show");
    });

    jQuery('#upload_plant_entries_button').click( function () {
        jQuery('#upload_plants_dialog').modal("show");
    });

    jQuery('#upload_plant_entries_with_index_number_button').click( function () {
        jQuery('#upload_plants_with_index_number_dialog').modal("show");
    });

    jQuery('#trial_upload_plants_spreadsheet_info_format').click( function () {
        jQuery('#upload_plants_spreadsheet_info_dialog').modal("show");
    });

    jQuery('#trial_upload_plants_with_index_number_spreadsheet_info_format').click( function () {
        jQuery('#upload_plants_with_index_number_spreadsheet_info_dialog').modal("show");
    });

    jQuery('#trial_upload_plants_with_num_plants_button').click( function () {
        jQuery('#upload_plants_with_number_of_plants_number_dialog').modal("show");
    });

    jQuery('#trial_upload_plants_with_num_plants_spreadsheet_info_format').click( function () {
        jQuery('#upload_plants_with_num_plants_spreadsheet_info_dialog').modal("show");
    });

    jQuery('#add_plants_save_button').click( function () {
        add_plants_to_trial();
    });

    jQuery('#upload_plants_save_button').click( function () {
        upload_plants_to_trial();
    });

    jQuery('#upload_plants_with_index_number_save_button').click( function () {
        upload_plants_with_index_number_to_trial();
    });

    jQuery('#upload_plants_with_num_plants_save_button').click( function () {
        upload_plants_with_num_plants_to_trial();
    });

    function upload_plants_to_trial() {
        var uploadFile = jQuery("#trial_upload_plants_file").val();
        jQuery('#upload_plants_dialog_form').attr("action", "/ajax/breeders/trial/<% $trial_id %>/upload_plants");
        if (uploadFile === '') {
            alert("Please select a file");
            return;
        }
        jQuery("#upload_plants_dialog_form").submit();
    }

    jQuery('#upload_plants_dialog_form').iframePostForm({
        json: true,
        post: function () {
            var uploadedPlantsFile = jQuery("#trial_upload_plants_file").val();
            jQuery('#working_modal').modal("show");
            if (uploadedPlantsFile === '') {
                jQuery('#working_modal').modal("hide");
                alert("No file selected");
            }
        },
        complete: function (response) {
            console.log(response);
            jQuery('#working_modal').modal("hide");

            if (response.error_string) {
                alert(response.error_string);
                return;
            }
            if (response.success) {
                alert("File uploaded successfully");
                window.location.replace('/breeders/trial/'+<% $trial_id %>);
            }
        }
    });

    function upload_plants_with_index_number_to_trial() {
        var uploadFile = jQuery("#trial_upload_plants_with_index_number_file").val();
        jQuery('#upload_plants_with_index_number_dialog_form').attr("action", "/ajax/breeders/trial/<% $trial_id %>/upload_plants_with_plant_index_number");
        if (uploadFile === '') {
            alert("Please select a file");
            return;
        }
        jQuery("#upload_plants_with_index_number_dialog_form").submit();
    }

    jQuery('#upload_plants_with_index_number_dialog_form').iframePostForm({
        json: true,
        post: function () {
            var uploadedPlantsFile = jQuery("#trial_upload_plants_with_index_number_file").val();
            jQuery('#working_modal').modal("show");
            if (uploadedPlantsFile === '') {
                jQuery('#working_modal').modal("hide");
                alert("No file selected");
            }
        },
        complete: function (response) {
            console.log(response);
            jQuery('#working_modal').modal("hide");

            if (response.error_string) {
                alert(response.error_string);
                return;
            }
            if (response.success) {
                alert("File uploaded successfully");
                window.location.replace('/breeders/trial/'+<% $trial_id %>);
            }
        }
    });

    function upload_plants_with_num_plants_to_trial() {
        var uploadFile = jQuery("#trial_upload_plants_with_number_of_plants_file").val();
        jQuery('#upload_plants_with_num_plants_dialog_form').attr("action", "/ajax/breeders/trial/<% $trial_id %>/upload_plants_with_number_of_plants");
        if (uploadFile === '') {
            alert("Please select a file");
            return;
        }
        jQuery("#upload_plants_with_num_plants_dialog_form").submit();
    }

    jQuery('#upload_plants_with_num_plants_dialog_form').iframePostForm({
        json: true,
        post: function () {
            var uploadedPlantsFile = jQuery("#trial_upload_plants_with_number_of_plants_file").val();
            jQuery('#working_modal').modal("show");
            if (uploadedPlantsFile === '') {
                jQuery('#working_modal').modal("hide");
                alert("No file selected");
            }
        },
        complete: function (response) {
            console.log(response);
            jQuery('#working_modal').modal("hide");

            if (response.error_string) {
                alert(response.error_string);
                return;
            }
            if (response.success) {
                alert("File uploaded successfully");
                window.location.replace('/breeders/trial/'+<% $trial_id %>);
            }
        }
    });

});

function add_plants_to_trial() {

    var is_checked;
    if(jQuery('#add_plants_per_plot_inherit_treatments').is(":checked")){
        is_checked = 1;
    }

    jQuery.ajax( {
      url: '/ajax/breeders/trial/'+<% $trial_id %>+'/create_plant_entries/',
      type: 'POST',
      beforeSend: function() {
          enable_working_modal();
      },
      data: {
        'plants_per_plot' : jQuery('#add_plants_per_plot_num').val(),
        'inherits_plot_treatments' : is_checked
      },
      success: function(response) {
        disable_working_modal();
        if (response.error) {
          alert(response.error);
        }
        else {
          alert("Successfully created plant entries.");
          jQuery('#add_plants_dialog').modal("hide");
          window.location.replace('/breeders/trial/'+<% $trial_id %>);
        }
      },
      error: function(response) {
        disable_working_modal();
        alert("An error occurred saving plant entries");
      },
    });

}

function enable_working_modal() {
    jQuery("#working_modal").modal("show");
}

function disable_working_modal() {
    jQuery("#working_modal").modal("hide");
}

function enable_plants_datatable() {
    jQuery('#trial_plants_table_html').DataTable();
}

</script>
