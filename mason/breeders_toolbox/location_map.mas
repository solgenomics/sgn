    if (! yes) { return; }

    new jQuery.ajax( {
      type: 'POST',
      url: '/ajax/location/delete/'+id,
      success: function(response) {
                  if (response.error) { alert(response.error); }
                  else {
                    alert(response.success);
		    location.reload();
                  }
               },
      error: function(response) {
                 alert("An error occurred");
             }
      });
   }


