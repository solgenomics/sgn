	var yes = confirm("Do you really want to remove this trial from the breeding program?");
	if (yes) {
            jQuery.ajax( {
		url: '/breeders/program/remove/<% $breeding_program_id %>/'+trial_id,
		data: { },
		async: false,
		success: function(response) {
		}
	    });
	}
    });

});

</script>
