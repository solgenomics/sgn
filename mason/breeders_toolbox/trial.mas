    $controls_empty = 0;
  }
}
my $number_of_plots = scalar(@plot_names);
my $plots_empty = 1;
if ($number_of_plots >= 1) {
  if (!$plot_names[0] eq "") {
    $plots_empty = 0;
  }
}
my $design_empty = 1;
if (!$design_type eq "") {
  $design_empty = 0;
}
my $design_subtitle = '[<a href="\\fieldbook\\trial_download\\'.$trial_id.'">Download Field Book</a>]';

