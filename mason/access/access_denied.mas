
<%args>
  $message => ""
  $data_type => "these"
</%args>
	
<br /><br />
  <div style="text-align: center; outline-style: solid; outline: lightgray solid 2px; padding: 20px">
    
    <h4>SORRY, ACCESS DENIED</h4>
    You do not have the privileges to access <% $data_type %> data on this server.
    <br /><br />
    If you believe this is in error, please contact your <a href="/contact/form">system administrator</a>.
    <br /><br />
% if ($message) {	
    Additional	information:
    <% $message %>
% }    
    <br />	
    <br	/>
    <button id="logout_and_log_back_in_button" class="btn btn-primary" >Log out and log in as another user</button>
    
  </div>
    

<script>

jQuery(window).ready( function() { 
    jQuery('#logout_and_log_back_in_button').click( function() {
	jQuery.ajax({
	    url: '/ajax/user/logout',
	}).then(
	    function(r) {
		window.location.reload();
	    },
	    function(r) {
		alert('an error occurred!');
	    }
	);
    });
});

</script>
